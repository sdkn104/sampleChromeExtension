{
    "name": "Sample Extension",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "sample for testing",
    "icons": {
        "128": "icon-128.png"
    },
    "permissions": [
        "webRequest",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content_script.js"],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "options_page": "./install.html" 
}
